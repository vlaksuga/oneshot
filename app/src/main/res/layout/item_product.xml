<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_product_item"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardView_item_product_is_sold_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/soldout" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cardView_item_product_product_thumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:background="@color/colorBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            app:srcCompat="@drawable/ice_americano" />

        <TextView
            android:id="@+id/cardView_item_product_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textStyle="bold"
            android:text="아이스 아메리카노"
            app:layout_constraintStart_toEndOf="@+id/cardView_item_product_product_thumb"
            app:layout_constraintTop_toTopOf="@+id/cardView_item_product_product_thumb" />

        <TextView
            android:id="@+id/cardView_item_product_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:ems="20"
            android:maxLines="3"
            android:text="향긋한 풍미를 자랑하는 대표 블랜디드 아메리카노입니다. 풍부한 산미와 아로마를 느낄 수 있습니다."
            app:layout_constraintBottom_toBottomOf="@+id/cardView_item_product_product_thumb"
            app:layout_constraintStart_toStartOf="@+id/cardView_item_product_product_name" />

        <TextView
            android:id="@+id/cardView_item_product_product_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="LARGE"
            app:layout_constraintStart_toStartOf="@+id/cardView_item_product_product_name"
            app:layout_constraintTop_toBottomOf="@+id/cardView_item_product_product_name" />

        <TextView
            android:id="@+id/cardView_item_product_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="2,500원"
            app:layout_constraintBottom_toBottomOf="@+id/cardView_item_product_product_size"
            app:layout_constraintEnd_toEndOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>